<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <RelativeLayout
        android:id="@+id/common_left"
        android:layout_width="35dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_common_left"
            android:layout_width="@dimen/offset_22dp"
            android:layout_height="@dimen/offset_22dp"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_back_arrow"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/common_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/action_bar_title_default"
        android:textSize="@dimen/font_17sp"
        android:textColor="@color/white"
        />

</RelativeLayout>